%prep

rm -rf uml
mkdir uml
cd uml
cp $ZTARBALL .
compressed=`echo user_mode_linux*`
gunzip $compressed
archive=`echo $compressed | sed 's/.gz$//'`
tar xf $archive .

%build

cd uml
make all

%install

rm -rf $UML_BUILD_DIR
mkdir $UML_BUILD_DIR
cd uml
make install DESTDIR=$UML_BUILD_DIR
						
%clean
rm -rf uml

%files
